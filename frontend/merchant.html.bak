        if (!file) return;
        if (file.size > 1024 * 1024) {
            toast(t('sound_too_large'), 'error');
            input.value = '';
            return;
        }
        const reader = new FileReader();
        reader.onload = function(e) {
            customSoundData = e.target.result;
            localStorage.setItem('customAlertSound', customSoundData);
            updateSoundUI();
            toast(t('sound_uploaded'), 'success');
            // è¯•å¬ä¸€ä¸‹
            playNotificationSound();
        };
        reader.readAsDataURL(file);
        input.value = '';
    }

    function toggleRecord() {
        if (mediaRecorder && mediaRecorder.state === 'recording') {
            // åœæ­¢å½•éŸ³
            mediaRecorder.stop();
            document.getElementById('recordingIndicator').style.display = 'none';
            document.getElementById('recordBtn').style.background = 'var(--bg-input)';
            return;
        }
        // å¼€å§‹å½•éŸ³
        navigator.mediaDevices.getUserMedia({ audio: true }).then(function(stream) {
            recordingChunks = [];
            mediaRecorder = new MediaRecorder(stream);
            mediaRecorder.ondataavailable = function(e) {
                recordingChunks.push(e.data);
            };
            mediaRecorder.onstop = function() {
                stream.getTracks().forEach(function(t) { t.stop(); });
                const blob = new Blob(recordingChunks, { type: 'audio/webm' });
                if (blob.size > 1024 * 1024) {
                    toast(t('sound_too_large'), 'error');
                    return;
                }
                const reader = new FileReader();
                reader.onload = function(ev) {
                    customSoundData = ev.target.result;
                    localStorage.setItem('customAlertSound', customSoundData);
                    updateSoundUI();
                    toast(t('sound_recorded'), 'success');
                    playNotificationSound();
                };
                reader.readAsDataURL(blob);
            };
            mediaRecorder.start();
            document.getElementById('recordingIndicator').style.display = 'block';
            document.getElementById('recordBtn').style.background = 'var(--red)';
            document.getElementById('recordBtn').style.color = '#fff';
            // æœ€é•¿10ç§’è‡ªåŠ¨åœæ­¢
            setTimeout(function() {
                if (mediaRecorder && mediaRecorder.state === 'recording') {
                    mediaRecorder.stop();
                    document.getElementById('recordingIndicator').style.display = 'none';
                    document.getElementById('recordBtn').style.background = 'var(--bg-input)';
                    document.getElementById('recordBtn').style.color = 'var(--text)';
                }
            }, 10000);
        }).catch(function() {
            toast(t('sound_mic_error'), 'error');
        });
    }

