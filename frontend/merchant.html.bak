    function confirmAction(wrapper, orderId, status, btnClass) {
        const mode = getConfirmMode();
        const btn = wrapper.querySelector('.order-btn');

        if (mode === 'longpress') {
            setupLongPress(wrapper, btn, orderId, status);
        } else if (mode === 'swipe') {
            setupSwipe(wrapper, btn, orderId, status, btnClass);
        } else if (mode === 'doubleclick') {
            setupDoubleClick(btn, orderId, status);
        } else if (mode === 'quicktap') {
            setupQuickTap(wrapper, btn, orderId, status, btnClass);
        } else {
            // Fallback: direct action
            executeOrderUpdate(orderId, status);
        }
    }

    function setupLongPress(wrapper, btn, orderId, status) {
        let timer = null;
        let isPressed = false;
        const duration = getLongpressDuration();

        // Add progress ring if not exists
        if (!wrapper.querySelector('.progress-ring')) {
            const ring = document.createElement('div');
            ring.className = 'progress-ring';
            ring.innerHTML = '<svg viewBox="0 0 100 100"><circle cx="50" cy="50" r="45"/><circle class="progress" cx="50" cy="50" r="45"/></svg>';
            wrapper.appendChild(ring);
        }

        // Update progress ring animation duration
        const progressCircle = wrapper.querySelector('.progress-ring .progress');
        if (progressCircle) {
            progressCircle.style.transition = `stroke-dashoffset ${duration}ms linear`;
        }

        const onDown = (e) => {
            e.preventDefault();
            isPressed = true;
            wrapper.classList.add('pressing');
            timer = setTimeout(() => {
                if (isPressed) {
                    executeOrderUpdate(orderId, status);
                }
            }, duration);
        };

        const onUp = () => {
            isPressed = false;
            wrapper.classList.remove('pressing');
            if (timer) {
                clearTimeout(timer);
                timer = null;
            }
        };

        btn.addEventListener('mousedown', onDown);
        btn.addEventListener('touchstart', onDown, { passive: false });
        btn.addEventListener('mouseup', onUp);
        btn.addEventListener('touchend', onUp);
        btn.addEventListener('mouseleave', onUp);
        btn.addEventListener('touchcancel', onUp);
    }

    // Status undo mapping
    const STATUS_UNDO_MAP = {
        'accepted': 'pending',
        'preparing': 'accepted',
        'ready': 'preparing'
    };

    function setupQuickTap(wrapper, btn, orderId, status, btnClass) {
        wrapper.classList.add('quicktap-mode');
        
        let undoTimer = null;
        let isHolding = false;
        const undoDuration = 2000;

        // Add undo progress bar if not exists
        if (!wrapper.querySelector('.undo-progress')) {
            const progress = document.createElement('div');
            progress.className = 'undo-progress';
            wrapper.appendChild(progress);
        }

        const onClick = (e) => {
            if (isHolding) return;
            e.preventDefault();
            // Quick tap - execute action
            executeOrderUpdate(orderId, status);
        };

        const onDown = (e) => {
            isHolding = false;
            undoTimer = setTimeout(() => {
                isHolding = true;
                // Start undo animation
                wrapper.classList.add('undoing');
                btn.classList.add('undoing');
                const originalText = btn.textContent;
                btn.textContent = t('undoing');
            }, 300);
        };

        const onUp = () => {
            if (undoTimer) {
                clearTimeout(undoTimer);
                undoTimer = null;
            }
            
            if (isHolding) {
                // Held long enough - perform undo
                const previousStatus = STATUS_UNDO_MAP[status];
                if (previousStatus) {
                    executeOrderUpdate(orderId, previousStatus);
                }
            }
            
            // Reset state
            wrapper.classList.remove('undoing');
            btn.classList.remove('undoing');
            isHolding = false;
        };

        btn.addEventListener('click', onClick);
        btn.addEventListener('mousedown', onDown);
        btn.addEventListener('touchstart', onDown, { passive: true });
        btn.addEventListener('mouseup', onUp);
        btn.addEventListener('touchend', onUp);
        btn.addEventListener('mouseleave', onUp);
        btn.addEventListener('touchcancel', onUp);
    }

    function setupSwipe(wrapper, btn, orderId, status, btnClass) {
        wrapper.classList.add('swipe-mode', btnClass);

        // Create slider if not exists
        if (!wrapper.querySelector('.swipe-slider')) {
            const slider = document.createElement('div');
            slider.className = 'swipe-slider';
            slider.innerHTML = '<div class="slider-thumb">â†’</div><span class="slider-text">' + t('slide_to_confirm') + '</span>';
            wrapper.appendChild(slider);

            let startX = 0;
            let currentX = 0;
            const maxDistance = wrapper.offsetWidth - 40; // 40 = thumb width

            const onTouchStart = (e) => {
                startX = e.touches ? e.touches[0].clientX : e.clientX;
                slider.style.transition = 'none';
            };

            const onTouchMove = (e) => {
                const x = e.touches ? e.touches[0].clientX : e.clientX;
                const diff = Math.max(0, Math.min(maxDistance, x - startX));
                currentX = diff;
                slider.style.transform = `translateX(${diff}px)`;
            };

            const onTouchEnd = () => {
                slider.style.transition = 'transform 0.2s ease';
                const threshold = maxDistance * 0.8;

                if (currentX >= threshold) {
                    // Completed - execute action
                    executeOrderUpdate(orderId, status);
                } else {
                    // Not enough - bounce back
                    slider.style.transform = 'translateX(0)';
                }
                currentX = 0;
            };

            slider.addEventListener('touchstart', onTouchStart, { passive: true });
            slider.addEventListener('touchmove', onTouchMove, { passive: true });
            slider.addEventListener('touchend', onTouchEnd);
            slider.addEventListener('mousedown', (e) => {
                onTouchStart(e);
                document.addEventListener('mousemove', onTouchMove);
                document.addEventListener('mouseup', function onUp() {
                    onTouchEnd();
                    document.removeEventListener('mousemove', onTouchMove);
                    document.removeEventListener('mouseup', onUp);
                });
            });
        }
    }

    function setupDoubleClick(btn, orderId, status) {
        const wrapper = btn.closest('.confirm-btn-wrapper');
        if (!wrapper) return;

        wrapper.classList.add('doubleclick-mode');

        const key = orderId + '_' + status;

        if (pendingClicks[key]) {
            // Second click - execute
            clearTimeout(pendingClicks[key].timer);
            delete pendingClicks[key];
            executeOrderUpdate(orderId, status);
        } else {
            // First click - show pending state
            btn.classList.add('pending-click');
            const originalText = btn.textContent;
            btn.textContent = t('confirm_prompt');

            const timer = setTimeout(() => {
                // Timeout - reset
                btn.classList.remove('pending-click');
                btn.textContent = originalText;
                delete pendingClicks[key];
            }, 3000);

            pendingClicks[key] = { timer, originalText };
        }
    }

